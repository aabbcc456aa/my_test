<h1>Listing items</h1>

<table>
  <tr>
    <th>Item no</th>
    <th>Item price</th>
    <th>Item num</th>
    <th>Item total price</th>
    <th>Item date</th>
    <th>Item person</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.item_no %></td>
    <td><%=h item.item_price %></td>
    <td><%=h item.item_num %></td>
    <td><%=h item.item_total_price %></td>
    <td><%=h item.item_date %></td>
    <td><%=h item.item_person %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>