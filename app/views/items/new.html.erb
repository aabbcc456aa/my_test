<h1>New item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :item_no %><br />
    <%= f.text_field :item_no %>
  </p>
  <p>
    <%= f.label :item_price %><br />
    <%= f.text_field :item_price %>
  </p>
  <p>
    <%= f.label :item_num %><br />
    <%= f.text_field :item_num %>
  </p>
  <p>
    <%= f.label :item_total_price %><br />
    <%= f.text_field :item_total_price %>
  </p>
  <p>
    <%= f.label :item_date %><br />
    <%= f.date_select :item_date %>
  </p>
  <p>
    <%= f.label :item_person %><br />
    <%= f.text_field :item_person %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>